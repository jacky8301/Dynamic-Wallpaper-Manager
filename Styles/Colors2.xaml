<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  现代化色彩定义  -->
    <Color x:Key="PrimaryColor">#2C3E50</Color>
    <Color x:Key="SecondaryColor">#3498DB</Color>
    <Color x:Key="AccentColor">#E74C3C</Color>
    <Color x:Key="SuccessColor">#4CAF50</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="LightBackground" Color="#F8F9FA" />
    <SolidColorBrush x:Key="CardBackground" Color="#20FFFFFF" />
</ResourceDictionary>
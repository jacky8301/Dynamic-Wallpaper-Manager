<UserControl x:Class="WallpaperEngine.Views.EditableTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <!-- 只读状态显示的 TextBlock -->
        <TextBlock x:Name="DisplayTextBlock"
                   Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   MouseDown="DisplayTextBlock_MouseDown"
                   Visibility="Visible"/>

        <!-- 编辑状态显示的 TextBox -->
        <TextBox x:Name="EditTextBox"
                 Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 LostFocus="EditTextBox_LostFocus"
                 KeyDown="EditTextBox_KeyDown"
                 Visibility="Collapsed"/>
    </Grid>
</UserControl>
<UserControl
    x:Class="WallpaperEngine.Views.ConfirmationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <materialDesign:Card Padding="16">
        <StackPanel>
            <!--  标题  -->
            <TextBlock
                Margin="0,0,0,8"
                Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                Text="{Binding Title}" />

            <!--  消息内容  -->
            <TextBlock
                Margin="0,0,0,16"
                Style="{StaticResource MaterialDesignBody1TextBlock}"
                Text="{Binding Message}"
                TextWrapping="Wrap" />

            <!--  按钮区域  -->
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Margin="0,0,8,0"
                    Command="{Binding CancelCommand}"
                    Content="{Binding CancelButtonText}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Visibility="{Binding ShowCancelButton, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button
                    Command="{Binding ConfirmCommand}"
                    Content="{Binding ConfirmButtonText}"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>
        </StackPanel>
    </materialDesign:Card>
</UserControl>

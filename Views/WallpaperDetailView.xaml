<UserControl
    x:Class="WallpaperEngine.Views.WallpaperDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:WallpaperEngine.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dg="clr-namespace:System.Diagnostics;assembly=WindowsBase"
    xmlns:local="clr-namespace:WallpaperEngine.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:WallpaperEngine.ViewModels"
    x:Name="wallpaperDetailView"
    d:DataContext="{d:DesignInstance Type=viewmodels:WallpaperDetailViewModel}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors2.xaml" />
                <ResourceDictionary Source="/Styles/MaterialCardStyle.xaml" />
                <ResourceDictionary Source="/Styles/SectionHeader.xaml" />
                <ResourceDictionary Source="/Styles/FieldLabel.xaml" />
                <ResourceDictionary Source="/Styles/SmartTextFieldStyle.xaml" />
                <ResourceDictionary Source="/Styles/Colors2.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:ImagePathToSourceConverter x:Key="ImageToSourceConverter" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer Padding="16" VerticalScrollBarVisibility="Auto">
        <Grid Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="60" />
                <RowDefinition Height="200" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--  标题区域  -->
            <Border
                Grid.Row="0"
                Background="{StaticResource PrimaryBrush}"
               >
                <TextBlock
                    Padding="20,10"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="壁纸详情" />
            </Border>
            <!--  信息卡片区域  -->
            <ScrollViewer
                Grid.Row="1"
                Margin="0,0,0,10"
                VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,10">
                    <!--  基本信息卡片  -->
                    <Border Style="{StaticResource MaterialCard}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionHeader}" Text="基本信息" />
                            <!--  标题字段  -->
                            <!--  描述字段  -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Style="{StaticResource FieldLabel}" Text="标题:" />
                                <ContentControl
                                    Grid.Column="1"
                                    Height="60"
                                    Content="{Binding Title, Mode=TwoWay}"
                                    Style="{StaticResource SmartTextField}" />
                            </Grid>
                            <!--  描述字段  -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Style="{StaticResource FieldLabel}" Text="描述:" />
                                <ContentControl
                                    Grid.Column="1"
                                    Height="60"
                                    Content="{Binding Description, Mode=TwoWay}"
                                    Style="{StaticResource SmartTextField}" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!--  分类信息卡片  -->
                    <Border Style="{StaticResource MaterialCard}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionHeader}" Text="分类信息" />

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Text="类型:" />
                                <ComboBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    FontSize="16"
                                    IsEnabled="{Binding IsEditMode}"
                                    ItemsSource="{Binding WallpaperTypes}"
                                    SelectedItem="{Binding SelectedType, Mode=TwoWay}"
                                    Style="{StaticResource MaterialDesignDataGridComboBox}" />
                                <!--  分类  -->
                                <TextBlock
                                    Grid.Row="1"
                                    Style="{StaticResource FieldLabel}"
                                    Text="分类:" />
                                <ComboBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    FontSize="16"
                                    IsEnabled="{Binding IsEditMode}"
                                    ItemsSource="{Binding CategoryList}"
                                    SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                                    Style="{StaticResource MaterialDesignDataGridComboBox}" />
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Width="28"
                                    Height="28"
                                    Margin="6,0,0,0"
                                    Padding="0"
                                    VerticalAlignment="Center"
                                    Command="{Binding AddCategoryCommand}"
                                    Content="+"
                                    FontSize="16"
                                    IsEnabled="{Binding IsEditMode}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="新增分类" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!--  标签卡片  -->
                    <Border Style="{StaticResource MaterialCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource SectionHeader}" Text="标签" />
                                <Button
                                    Width="28"
                                    Height="28"
                                    Margin="8,0,0,0"
                                    Padding="0"
                                    VerticalAlignment="Center"
                                    Command="{Binding AddTagCommand}"
                                    Content="+"
                                    FontSize="16"
                                    IsEnabled="{Binding IsEditMode}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="新增标签" />
                            </StackPanel>

                            <Border
                                Padding="12"
                                Background="{StaticResource LightBackground}"
                                CornerRadius="4">
                                <ItemsControl ItemsSource="{Binding Tags}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Margin="2,4"
                                                Padding="8,4"
                                                Background="{StaticResource SecondaryBrush}"
                                                CornerRadius="12">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontSize="11"
                                                        FontWeight="SemiBold"
                                                        Foreground="White"
                                                        Text="{Binding}" />
                                                    <Button
                                                        Width="16"
                                                        Height="16"
                                                        Margin="4,0,0,0"
                                                        Padding="0"
                                                        VerticalAlignment="Center"
                                                        Command="{Binding DataContext.RemoveTagCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Content="x"
                                                        FontSize="10"
                                                        Foreground="White"
                                                        Visibility="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <Button.Style>
                                                            <Style BasedOn="{StaticResource MaterialDesignIconButton}" TargetType="Button">
                                                                <Setter Property="Background" Value="Transparent" />
                                                                <Setter Property="BorderThickness" Value="0" />
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!--  文件列表卡片  -->
                    <Border Style="{StaticResource MaterialCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <!--  内容文件名  -->
                                <TextBlock Style="{StaticResource SectionHeader}" Text="文件名:" />
                                <ContentControl
                                    Margin="20,0,0,8"
                                    Content="{Binding ContentFileName}"
                                    FontSize="14"
                                    Style="{StaticResource SmartTextField}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource SectionHeader}" Text="预览图:" />
                                <TextBlock
                                    Margin="20,0,0,8"
                                    FontSize="14"
                                    Text="{Binding PreviewFileName, Mode=TwoWay}" />
                            </StackPanel>
                            <TextBlock Style="{StaticResource SectionHeader}" Text="目录文件" />

                            <Border
                                Height="Auto"
                                Padding="12"
                                Background="{StaticResource LightBackground}"
                                CornerRadius="4">
                                <ListBox
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ItemsSource="{Binding CurrentWallpaper.FileNameList}"
                                    Style="{StaticResource MaterialDesignFilterChipOutlineListBox}">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Margin="0,0,20,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Text="{Binding}"
                                                    TextTrimming="CharacterEllipsis"
                                                    ToolTip="{Binding}" />

                                                <Button
                                                    Grid.Column="1"
                                                    Height="22"
                                                    Margin="5,0,0,0"
                                                    Padding="8,2"
                                                    Command="{Binding DataContext.SetContentFileNameCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                    CommandParameter="{Binding}"
                                                    Content="选择为内容文件"
                                                    FontSize="10"
                                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                                <Button
                                                    Grid.Column="2"
                                                    Height="22"
                                                    Margin="5,0,0,0"
                                                    Padding="8,2"
                                                    Command="{Binding DataContext.SetPreviewFileNameCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                    CommandParameter="{Binding}"
                                                    Content="选择为预览图"
                                                    FontSize="10"
                                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            <StackPanel
                Grid.Row="2"
                Margin="20,0,0,0"
                Orientation="Horizontal">
                <!--  编辑操作按钮  -->
                <Button
                    x:Name="EditButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding StartEditCommand}"
                    Content="✏️"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Visibility="{Binding IsEditMode, Converter={StaticResource InverseBooleanConverter}, ConverterParameter=Visibility}" />

                <Button
                    x:Name="SaveButton"
                    Margin="5,0,0,0"
                    Background="{StaticResource SuccessBrush}"
                    Command="{Binding SaveEditCommand}"
                    Content="💾 保存"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Button
                    x:Name="CancelButton"
                    Margin="5,0,0,0"
                    Command="{Binding CancelEditCommand}"
                    Content="❌ 取消"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>
            <!--  预览区域  -->
            <Border
                Grid.Row="3"
                Margin="10,0"
                Background="Black">
                <Image
                    VerticalAlignment="Center"
                    Source="{Binding CurrentWallpaper.PreviewImagePath, Converter={StaticResource ImageToSourceConverter}}"
                    Stretch="Uniform" />
            </Border>
            <!--  [操作按钮区域  -->
            <Border
                Grid.Row="4"
                Margin="0,10,0,0"
                Padding="15"
                Background="{StaticResource LightBackground}"
                CornerRadius="0,0,8,8">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <!--  功能操作按钮  -->
                    <Rectangle
                        Width="1"
                        Height="30"
                        Margin="15,0"
                        Fill="#E0E0E0" />
                    <Button
                        Height="30"
                        Margin="5"
                        Padding="12,0"
                        Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding CurrentWallpaper}"
                        Content="⭐ 收藏"
                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                    <Button
                        x:Name="btnPreview"
                        Height="30"
                        Margin="5"
                        Padding="12,0"
                        Command="{Binding DataContext.PreviewWallpaperCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding CurrentWallpaper}"
                        Content="👁️ 预览"
                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                    <Button
                        Height="30"
                        Margin="5"
                        Padding="12,0"
                        Background="{StaticResource SecondaryBrush}"
                        Command="{Binding DataContext.ApplyWallpaperCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding CurrentWallpaper}"
                        Content="🚀 应用"
                        Foreground="White"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
                    <Button
                        Height="30"
                        Margin="5"
                        Padding="12,0"
                        Command="{Binding DataContext.DeleteWallpaperCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding CurrentWallpaper}"
                        Content="🗑️ 删除"
                        Foreground="{StaticResource AccentBrush}"
                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                </StackPanel>
            </Border>

        </Grid>
    </ScrollViewer>
</UserControl>
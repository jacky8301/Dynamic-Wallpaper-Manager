<UserControl x:Class="WallpaperEngine.Views.WallpaperDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:WallpaperEngine.Converters"
             xmlns:viewmodels="clr-namespace:WallpaperEngine.ViewModels"
             xmlns:local="clr-namespace:WallpaperEngine.Views"
             d:DataContext="{d:DesignInstance Type=viewmodels:WallpaperDetailViewModel}"
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converters:ImagePathToSourceConverter x:Key="ImageToSourceConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" >
                <StackPanel>
                    <TextBlock Text="壁纸详情" FontSize="16" FontWeight="Bold" Background="#F5F5F5" Padding="10"/>
                    <TextBlock Text="{Binding CurrentWallpaper.Project.Title}" FontWeight="Bold" FontSize="14" />
                    <TextBox Text="{Binding CurrentWallpaper.Project.Description,UpdateSourceTrigger=PropertyChanged}" 
                                  TextWrapping="Wrap" Margin="0,10" FontSize="12"
                                  Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                  AcceptsReturn="True" Height="60"
                                  IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBooleanConverter}}"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="类型:" FontWeight="Bold" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding CurrentWallpaper.Project.Type}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="分类:" FontWeight="Bold" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding CurrentWallpaper.Category}"/>
                    </StackPanel>
                    <TextBlock Text="标签:" FontWeight="Bold" Margin="0,5,0,0"/>
                    <WrapPanel Margin="0,2" Cursor="">
                        <ItemsControl ItemsSource="{Binding CurrentWallpaper.Project.Tags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E3F2FD" CornerRadius="10" Margin="2,1" Padding="5,2">
                                        <TextBlock Text="{Binding}" FontSize="10"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="内容文件名:" FontWeight="Bold" />
                        <TextBox x:Name="ContentFileNameTextBox"
                                 Text="{Binding CurrentWallpaper.Project.File, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" 
                                 FontSize="12"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 IsReadOnly="{Binding IsEditMode, Converter={StaticResource InverseBooleanConverter}}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="壁纸目录文件列表:" FontWeight="Bold" Margin="0,0,5,0" />
                        <ListBox ItemsSource="{Binding CurrentWallpaper.FileNameList}" Height="100" Width="300"
                                 Style="{StaticResource MaterialDesignFilterChipOutlineListBox}"
                                 IsEnabled="{Binding IsEditMode}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Text="{Binding .}"  IsEnabled="True"  IsReadOnly="False" Background="Transparent" BorderThickness="0" FontSize="12"/>
                                        <Button Content="Select" Command="{Binding DataContext.SetContentFileNameCommand, diag:PresentationTraceSources.TraceLevel=High, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding .}" 
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Margin="5,0,0,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <!-- 操作按钮 -->
                    <StackPanel Orientation="Horizontal" MinHeight="40">
                        <Button x:Name="EditButton" Command="{Binding StartEditCommand}" Style="{StaticResource MaterialDesignOutlinedButton}"
                            Content="✏️ 编辑"
                            Visibility="Visible" Cursor="">
                        </Button>
                        <Button x:Name="SaveButton" Command="{Binding SaveEditCommand}" Style="{StaticResource MaterialDesignOutlinedButton}"                         
                            Content="💾 保存"
                            Visibility="Visible" Cursor=""
                              IsEnabled="{Binding IsEditMode}"  />
                        <Button x:Name="CancelButton" 
                            Command="{Binding CancelEditCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Content="❌ 取消"
                            Visibility="Visible"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            <!-- 预览区域 -->
            <Border Grid.Row="1" Margin="10" Background="Black" Height="200">
                <Image Source="{Binding CurrentWallpaper.PreviewImagePath, Converter={StaticResource ImageToSourceConverter}}" Stretch="Uniform"/>
            </Border>
            <!-- 操作按钮 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="⭐ 收藏"   Height="30" Margin="5" Foreground="White"/>
                <Button x:Name="btnPreview" Content="👁️ 预览"  Height="30" Margin="5"/>
                <Button Content="🚀 应用"  Height="30" Margin="5" Background="#4CAF50" Foreground="White"/>
                <Button Content="🗑️ 删除"  Height="30" Margin="5" Background="#F44336" Foreground="White"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
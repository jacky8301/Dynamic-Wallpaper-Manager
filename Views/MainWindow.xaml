<!-- MainWindow.xaml -->
<Window x:Class="WallpaperEngine.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wallpaper Engine 管理工具" Height="800" Width="1200">
    <!-- 在MainWindow.xaml的壁纸项模板中添加 -->
    <DataTemplate DataType="{x:Type models:WallpaperItem}">
        <Border Width="200" Height="150" Margin="5" 
        MouseEnter="WallpaperItem_MouseEnter" 
        MouseLeave="WallpaperItem_MouseLeave"
        MouseDoubleClick="WallpaperItem_MouseDoubleClick">

            <Border.ToolTip>
                <ToolTip x:Name="PreviewToolTip" Placement="Mouse" StaysOpen="true" 
                HorizontalOffset="10" VerticalOffset="10" Width="300" Height="200">
                    <views:PreviewControl x:Name="ToolTipPreview"/>
                </ToolTip>
            </Border.ToolTip>

            <Grid>
                <Image Source="{Binding PreviewImagePath}" Stretch="UniformToFill"/>
                <TextBlock Text="{Binding Project.Title}" VerticalAlignment="Bottom" 
                  Background="#80000000" Foreground="White" Padding="5"/>
            </Grid>
        </Border>
    </DataTemplate>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <ToolBar Grid.Row="0">
            <Button Content="扫描壁纸" Command="{Binding ScanWallpapersCommand}"/>
            <Separator/>
            <TextBlock Text="搜索:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" Margin="5,0"/>
            <ComboBox ItemsSource="{Binding Categories}" 
                      SelectedItem="{Binding SelectedCategory}" 
                      Width="100" Margin="5,0"/>
            <CheckBox Content="仅收藏" IsChecked="{Binding ShowFavoritesOnly}" 
                      VerticalAlignment="Center" Margin="10,0"/>
        </ToolBar>

        <!-- 进度条 -->
        <ProgressBar Value="{Binding ScanProgress}" Height="10" 
                     Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"
                     Grid.Row="0" VerticalAlignment="Bottom"/>

        <!-- 内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- 壁纸网格 -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding WallpapersView}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5" 
                                    Width="200" Height="150">
                                <Grid>
                                    <Image Source="{Binding PreviewImagePath}" Stretch="UniformToFill"/>
                                    <Border Background="#80000000" VerticalAlignment="Bottom">
                                        <TextBlock Text="{Binding Project.Title}" 
                                                   Foreground="White" Margin="5" 
                                                   TextWrapping="Wrap"/>
                                    </Border>
                                    <Button Content="⭐" FontSize="20" Foreground="Gold"
                                            HorizontalAlignment="Right" VerticalAlignment="Top"
                                            Margin="5" Width="30" Height="30"
                                            Command="{Binding DataContext.ToggleFavoriteCommand, 
                                                RelativeSource={RelativeSource AncestorType=Window}}"
                                            Visibility="{Binding IsFavorite, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- MainWindow.xaml 右侧详情区域 -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 详情标题 -->
                    <TextBlock Text="壁纸详情" FontSize="16" FontWeight="Bold" Margin="10"/>

                    <!-- 预览区域 -->
                    <Border Grid.Row="1" Margin="10" Background="Black">
                        <views:PreviewControl x:Name="DetailPreview" Height="300"/>
                    </Border>

                    <!-- 详细信息 -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <TextBlock Text="{Binding SelectedWallpaper.Project.Title}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedWallpaper.Project.Description}" TextWrapping="Wrap"/>
                            <!-- 其他详细信息 -->
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
<Window x:Class="WallpaperEngine.Views.MainWindow"
        x:Name="mainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WallpaperEngine.ViewModels"
        Title="Wallpaper Engine 管理工具" Height="1000" Width="1500"
        MinHeight="1000" MinWidth="1500"
        xmlns:converters="clr-namespace:WallpaperEngine.Converters"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">
    <!-- 设置WindowChrome，定义可拖动区域等 -->
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="6"
                      GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/WallpaperMenuItemStyle.xaml"/>
                <ResourceDictionary Source="/Styles/WallpaperItemContextMenuStyle.xaml"/>
                <ResourceDictionary Source="/Styles/WallpaperItemStyle.xaml"/>
                <ResourceDictionary Source="/Styles/FavoriteButtonStyle.xaml"/>
                <ResourceDictionary Source="/Converters/CommonConverters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- 你的主界面内容 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 标题栏行 -->
            <RowDefinition Height="*"/>
            <!-- 内容行 -->
        </Grid.RowDefinitions>

        <!-- 自定义标题栏 -->
        <Border Grid.Row="0" 
                Background="{DynamicResource MaterialDesign.Brush.Primary.Light}" 
                Height="40">
            <Grid>
                <TextBlock Text="Wallpaper Engine 壁纸管理工具" 
                           VerticalAlignment="Center" 
                           Margin="10,0"
                           Foreground="White"
                           FontSize="14"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button x:Name="MinimizeButton" 
                            Style="{StaticResource MaterialDesignToolButton}"
                            Content="-"
                            FontSize="14"
                            Click="MinimizeButton_Click"/>
                    <Button x:Name="MaximizeButton"
                            Style="{StaticResource MaterialDesignToolButton}"
                            Content="□"
                            FontSize="14"
                            Click="MaximizeButton_Click"/>
                    <Button x:Name="CloseButton"
                            Style="{StaticResource MaterialDesignToolButton}"
                            Content="×"
                            FontSize="14"
                            Click="CloseButton_Click"
                            Foreground="Red"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- 工具栏 -->
                <ToolBar Grid.Row="0" Background="#F0F0F0">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <CheckBox x:Name="FavoriteFilterCheckBox" 
              Content="⭐ 仅显示收藏" 
              IsChecked="{Binding ShowFavoritesOnly}"
              ToolTip="只显示已收藏的壁纸"/>

                        <Separator/>
                        <!-- 扫描按钮组 -->
                        <Button Content="📁 扫描壁纸" 
                Command="{Binding ScanWallpapersCommand}"
                Width="100" Height="30" Margin="5,0"
                ToolTip="扫描壁纸文件夹"/>

                        <Button Content="⚡ 快速增量扫描" 
                Command="{Binding QuickIncrementalScanCommand}"
                Width="120" Height="30" Margin="5,0"
                ToolTip="对上次扫描的文件夹进行增量扫描"
                Background="#4CAF50" Foreground="White"/>

                        <Button Content="❌ 取消" 
                Command="{Binding CancelScanCommand}"
                Width="80" Height="30" Margin="5,0"
                ToolTip="取消当前扫描"
                Background="#F44336" Foreground="White"
                Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <Separator Margin="10,0"/>

                        <!-- 扫描模式选择 -->
                        <CheckBox Content="启用增量扫描" 
                  IsChecked="{Binding UseIncrementalScan}"
                  VerticalAlignment="Center" Margin="5,0"
                  ToolTip="增量扫描只处理新增或修改的文件，速度更快"/>

                        <Separator Margin="10,0"/>

                        <!-- 扫描状态显示 -->
                        <StackPanel Orientation="Vertical" Margin="10,0" Width="300">
                            <TextBlock Text="{Binding ScanStatus}" 
                       FontWeight="Bold" TextWrapping="Wrap"/>

                            <ProgressBar Value="{Binding ScanProgress}" 
                       Height="10" 
                       Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}"
                       Margin="0,5"/>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="新增:" Foreground="Green" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding NewFoundCount}"/>
                                <TextBlock Text="更新:" Foreground="Blue" Margin="10,0,5,0"/>
                                <TextBlock Text="{Binding UpdatedCount}"/>
                                <TextBlock Text="跳过:" Foreground="Gray" Margin="10,0,5,0"/>
                                <TextBlock Text="{Binding SkippedCount}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ToolBar>

                <!-- 扫描状态显示 -->
                <Border Grid.Row="0" Background="#FFF8E1" Height="30" 
                VerticalAlignment="Bottom"
                Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="{Binding ScanStatus}" FontWeight="Bold" 
                           Foreground="{Binding IsScanning}"/>
                        <ProgressBar Value="{Binding ScanProgress}" Width="200" Height="10" 
                           IsIndeterminate="{Binding IsIndeterminate}" Margin="20,0"/>
                        <TextBlock Text="{Binding ScannedCount, StringFormat=已扫描: {0} 个}" 
                           Margin="10,0" Foreground="Gray"/>
                    </StackPanel>
                </Border>
                <!-- 内容区域 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <!-- 壁纸网格 -->
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Wallpapers}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="1" Margin="5" 
                                    Width="200" Height="150" Cursor="Hand">
                                        <!-- 右键菜单定义 -->
                                        <Border.ContextMenu>
                                            <ContextMenu Style="{StaticResource WallpaperItemContextMenuStyle}">
                                                <!-- 预览菜单项 -->
                                                <MenuItem Header="👁️ 预览壁纸" 
                                  Style="{StaticResource WallpaperMenuItemStyle}"
                                  Command="{Binding DataContext.PreviewWallpaperCommand,Source={x:Reference mainWindow}}"
                                  CommandParameter="{Binding}"/>
                                                <!-- 应用菜单项 -->
                                                <MenuItem Header="🚀 应用壁纸" 
                                  Style="{StaticResource WallpaperMenuItemStyle}"
                                  Command="{Binding ApplyWallpaperCommand}"
                                  CommandParameter="{Binding}"/>
                                                <!-- 分隔线 -->
                                                <Separator/>
                                                <!-- 转到目录菜单项 -->
                                                <MenuItem Header="📁 转到壁纸目录" 
                                  Style="{StaticResource WallpaperMenuItemStyle}"
                                  Command="{Binding DataContext.GoToWallpaperDirectoryCommand,Source={x:Reference mainWindow}}"
                                  CommandParameter="{Binding}"/>
                                                <!-- 分隔线 -->
                                                <Separator/>
                                                <!-- 收藏菜单项 -->
                                                <MenuItem Header="收藏壁纸" 
                                    Style="{StaticResource WallpaperMenuItemStyle}"
                                    Command="{Binding FavoriteWallpaperCommand}"
                                    CommandParameter="{Binding}"
                                    />
                                                <!-- 分隔线 -->
                                                <Separator/>
                                                <!-- 删除菜单项 -->
                                                <MenuItem Header="🗑️ 删除壁纸" 
                                  Style="{StaticResource WallpaperMenuItemStyle}"
                                  Command="{Binding DeleteWallpaperCommand}"
                                  CommandParameter="{Binding}"
                                  Foreground="Red"/>

                                            </ContextMenu>
                                        </Border.ContextMenu>
                                        <Border.InputBindings>
                                            <!-- 关键配置：将左键双击手势绑定到命令 -->
                                            <MouseBinding Gesture="LeftDoubleClick"
                                        Command="{Binding DataContext.PreviewWallpaperCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}" />
                                        </Border.InputBindings>
                                        <Grid>
                                            <Image Source="{Binding PreviewImagePath}" Stretch="UniformToFill"/>
                                            <Border Background="#80000000" VerticalAlignment="Bottom">
                                                <TextBlock Text="{Binding Project.Title}" 
                                                   Foreground="White" Margin="5" 
                                                   TextWrapping="Wrap" FontWeight="Bold"/>
                                            </Border>
                                            <!-- 收藏按钮 - 固定在右上角 -->
                                            <Button 
                                                Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                HorizontalAlignment="Right" VerticalAlignment="Top"
                                                Margin="5" Width="50" Height="50"
                                                Style="{StaticResource FavoriteButtonStyle}">
                                                <!-- 根据 IsFavorite 属性动态显示不同图标 -->
                                                <Button.Content>
                                                    <MultiBinding Converter="{StaticResource FavoriteIconConverter}">
                                                        <Binding Path="IsFavorite"/>
                                                        <Binding Path="IsMouseOver" RelativeSource="{RelativeSource AncestorType=Button}"/>
                                                    </MultiBinding>
                                                </Button.Content>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- 详情面板 -->
                    <Border Grid.Column="1" BorderBrush="#E0E0E0" BorderThickness="1,0,0,0">
                        <Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <!--<RowDefinition Height="Auto"/>-->
                                </Grid.RowDefinitions>
                                <!-- 扫描历史标题 -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" 
                    Background="#F5F5F5" Margin="10">
                                    <TextBlock Text="扫描历史" FontWeight="Bold"/>
                                    <Button Content="🗑️ 清除" 
                    Command="{Binding ClearScanHistoryCommand}"
                    Margin="10,0,0,0" Padding="5,2"
                    ToolTip="清除扫描历史记录"/>
                                </StackPanel>

                                <!-- 扫描历史列表 -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding ScanHistory}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" 
                                Padding="10,5" Background="White">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <TextBlock Grid.Row="0" 
                                           Text="{Binding ScanPath}"
                                           FontSize="11" Foreground="#666"
                                           TextTrimming="CharacterEllipsis"/>

                                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                                                            <TextBlock Text="{Binding LastScanTime, StringFormat='yyyy-MM-dd HH:mm'}"
                                               FontSize="10" Foreground="#999"/>
                                                            <TextBlock Text=" | " Foreground="#999" Margin="5,0"/>
                                                            <TextBlock Text="新增:" FontSize="10" Foreground="Green"/>
                                                            <TextBlock Text="{Binding NewFound}" FontSize="10" Margin="2,0,10,0"/>
                                                            <TextBlock Text="总数:" FontSize="10" Foreground="#666"/>
                                                            <TextBlock Text="{Binding TotalScanned}" FontSize="10" Margin="2,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>

                            <TextBlock Text="壁纸详情" FontSize="16" FontWeight="Bold" Margin="10" 
                               Background="#F5F5F5" Padding="10"/>

                            <!-- 预览区域 -->
                            <Border Grid.Row="1" Margin="10" Background="Black" Height="200">
                                <Image Source="{Binding SelectedWallpaper.PreviewImagePath}" 
                               Stretch="Uniform"/>
                            </Border>

                            <!-- 详细信息 -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,220,10,10">
                                <StackPanel>
                                    <TextBlock Text="{Binding SelectedWallpaper.Project.Title}" 
                                       FontWeight="Bold" FontSize="14" Margin="0,5"/>

                                    <TextBlock Text="{Binding SelectedWallpaper.Project.Description}" 
                                       TextWrapping="Wrap" Margin="0,10" FontSize="12"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="类型:" FontWeight="Bold" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding SelectedWallpaper.Project.Type}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="分类:" FontWeight="Bold" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding SelectedWallpaper.Category}"/>
                                    </StackPanel>

                                    <TextBlock Text="标签:" FontWeight="Bold" Margin="0,5,0,0"/>
                                    <WrapPanel Margin="0,2">
                                        <ItemsControl ItemsSource="{Binding SelectedWallpaper.Project.Tags}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#E3F2FD" CornerRadius="10" 
                                                    Margin="2,1" Padding="5,2">
                                                        <TextBlock Text="{Binding}" FontSize="10"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </WrapPanel>
                                </StackPanel>

                            </ScrollViewer>

                            <!-- 操作按钮 -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                                <Button Content="⭐ 收藏" Command="{Binding ToggleFavoriteCommand}" 
                                Width="80" Height="30" Margin="5" 
                                Foreground="White"/>
                                <Button Content="👁️ 预览" Command="{Binding PreviewWallpaperCommand}" 
                                Width="80" Height="30" Margin="5"/>
                                <Button Content="🚀 应用" Command="{Binding ApplyWallpaperCommand}" 
                                Width="80" Height="30" Margin="5" Background="#4CAF50" Foreground="White"/>
                                <Button Content="🗑️ 删除" Command="{Binding DeleteWallpaperCommand}" 
                                Width="80" Height="30" Margin="5" Background="#F44336" Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>